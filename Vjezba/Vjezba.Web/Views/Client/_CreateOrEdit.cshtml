@model Client

    <input asp-for="ID" type="hidden" />

    <div class="form-group">
        First Name
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        Last Name
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        Email
        <input asp-for="Email" id="email" class="form-control">
        <div id="email-hint" style="display: none;">Hint: Enter your Email address</div>
    </div>

    <div class="form-group">
        Gender
        <input asp-for="Gender" class="form-control" />
    </div>
    
    <input asp-for="Address" id="address" type="hidden" class="form-control">

    <div class="form-group">
        Address
        <input asp-for="Address" id="address-input" class="form-control" autocomplete="address-line1">
    </div>
    

    <div class="form-group">
        Phone Number
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    
    <div class="form-group">
        Working Experience
        <input asp-for="WorkingExperience" class="form-control" />
        <span asp-validation-for="WorkingExperience" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        City
        <select asp-for="CityID" asp-items="ViewBag.Cities" class="form-control"></select>
    </div>

    <div class="form-group">
        <label class="control-label">Date of birth</label>
        <div class="inpuit-group date" data-provide="datepicker" data-date-format="@System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </div
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary mt-3" />
    </div>

