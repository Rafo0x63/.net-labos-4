@model List<Client>

@{
	ViewData["Title"] = "Home Page";
}

<style>
	.tab-pane {
		padding: 20px;
	}
</style>

<div style="margin-top: 20px;">
	<!-- Nav tabs -->

	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link @(ViewBag.ActiveTab == 1 ? "active" : "")" href="#z-2-11" aria-controls="z-2-11" role="tab" data-bs-toggle="tab">GET</a>
		</li>
		<li class="nav-item">
			<a class="nav-link @(ViewBag.ActiveTab == 2 ? "active" : "")" href="#z-2-12" aria-controls="z-2-12" role="tab" data-bs-toggle="tab">POST</a>
		</li>
		<li class="nav-item">
			<a class="nav-link @(ViewBag.ActiveTab == 3 ? "active" : "")" href="#z-2-13" aria-controls="z-2-13" role="tab" data-bs-toggle="tab">Bind</a>
		</li>
		<li class="nav-item">
			<a class="nav-link @(ViewBag.ActiveTab == 4 ? "active" : "")" href="#z-3-3" aria-controls="z-3-3" role="tab" data-bs-toggle="tab">Partial</a>
		</li>
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
		<div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 1 ? "show active" : "")" id="z-2-11">
			<h4>Zadatak 2.11 - GET forma s jednim parametrom</h4>
			<form action="@Url.Action("Index")" method="get">
				<div class="row">
					<div class="col-9">
						<div class="form-group">
							<input type="text" class="form-control" name="query" placeholder="Upišite željeni pojam">
						</div>
					</div>
					<div class="col-3">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</div>
			</form>
		</div>
		<div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 2 ? "show active" : "")" id="z-2-12">
			<h4>Zadatak 2.12 - POST forma s dva parametra</h4>
			<form action="@Url.Action("Index")" method="post">
				<div class="row">
					<div class="col-4">
						<div class="form-group">
							<input type="text" class="form-control" name="queryName" placeholder="Pretraga po imenu">
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							<input type="text" class="form-control" name="queryAddress" placeholder="Pretraga po adresi">
						</div>
					</div>
					<div class="col-2">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</div>
			</form>
		</div>
		<div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 3 ? "show active" : "")" id="z-2-13">
			<h4>Zadatak 2.13 - POST forma, binding na model</h4>
			<form action="@Url.Action("AdvancedSearch")" method="post" class="form-inline">
				<div class="row">
					<div class="col">
						<div class="form-group">
							<input type="text" class="form-control" name="FullName" placeholder="Pretraga po imenu">
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							<input type="text" class="form-control" name="Address" placeholder="Pretraga po adresi">
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							<input type="text" class="form-control" name="Email" placeholder="Pretraga po e-mailu">
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							<input type="text" class="form-control" name="City" placeholder="Pretraga po gradu">
						</div>
					</div>
					<div class="col">
						<button type="submit" class="btn btn-primary m-t-10">Submit</button>
					</div>
				</div>
			</form>
		</div>
		<div role="tabpanel" class="tab-pane  @(ViewBag.ActiveTab == 4 ? "show active" : "")" id="z-3-3">
			<h4>Zadatak 3.3 - Partial</h4>
			@*@await Html.PartialAsync("_ClientFilter", new ClientFilterModel())*@
			<partial name="_ClientFilter" model="new ClientFilterModel()" />
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<a asp-action="Create" class="btn btn-success float-right">Dodaj novog</a>
	</div>
</div>

<table style="margin-top: 20px;" class="table table-condensed">
	<thead>
		<tr>
			<th>Client</th>
			<th>Address</th>
			<th>Email</th>
			<th>City</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a asp-action="Details" asp-route-id="@item.ID">@item.FullName</a>
				</td>
				<td>@item.Address</td>
				<td>@item.Email</td>
				<td>@item.City?.Name</td>
			</tr>
		}
	</tbody>
</table>